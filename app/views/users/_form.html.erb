<%= form_for @user, html: {class: "form-signin"} do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.label :name, (t "v_u_form.your_name"), class: "sr-only" %>
  <%= f.text_field :name, class: "form-control",
                    placeholder: (t "v_u_form.your_name_p"), required: true  %>
  <%= f.label :email, (t "v_u_form.your_email"), class: "sr-only" %>
  <%= f.email_field :email, class: "form-control",
                    placeholder: (t "v_u_form.your_email_p"), required: true  %>
  <%= f.label :password, (t "v_u_form.your_pass"), class: "sr-only" %>
  <%= f.password_field :password, class: "form-control",
                        placeholder: (t "v_u_form.pass_p"), required: true  %>
  <%= f.label :password_confirmation, (t "v_u_form.passw_conf"), class: "sr-only" %>
  <%= f.password_field :password_confirmation, class: "form-control",
                        placeholder: (t "v_u_form.pass_conf_p"), required: true  %>
  <%= f.submit yield(:button_text), class: "btn btn-lg btn-primary btn-block" %>
<% end %>
