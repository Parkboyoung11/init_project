<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3></h3>
    <%= render "follow_form" if logged_in? %>
    <h3></h3>
    <% if @user.entries.any? %>
      <h3>Entries (<%= @user.entries.count %>)</h3>
      <ol class="publish_posts">
        <%= render @entries %>
      </ol>
      <%= paginate @entries %>
    <% end %>
  </div>
</div>
